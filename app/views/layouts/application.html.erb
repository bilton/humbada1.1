<!DOCTYPE html>
<html>
<head>
  <title>Humbada11</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |key, value| %>
  <%= content_tag(:p, value, :class => "flash #{key}") %>
<% end %>

<%-# Cart total price: <%= @cart.total_price -%>

<% if current_user %>
<h2>You are currently signed in as admin, with email: <%= current_user.email %></h2>
<%= button_to "Sign Out", session_path, method: :delete, data: {confirm: "Are you sure you wanna sign out?"} %>

<% end %>

<%= yield %>

<%= debug(params) if Rails.env.development? %>
</body>
</html>
