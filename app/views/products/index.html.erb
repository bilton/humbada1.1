<h1>Index page for products</h1>

<% @products.each do |p| %>
	<ul>
		<li> <%= p.title %></li>
		<li> <%= p.price %></li>
		<li> <%= p.description %></li>
		<li> <%= p.image_url %></li>
	</ul> 
	<%= link_to "Show", product_path(p)  %>
	<%= link_to "Edit", edit_product_path(p)  %>
	<%= link_to "Delete", product_path(p), method: :delete, data: {confirm: "Are you sure??"} %>
<% end %>

</br>

<h2><%= link_to "New product", new_product_path %></h2>

